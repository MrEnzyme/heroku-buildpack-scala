#!/usr/bin/env bash

# fail fast
set -e

# parse args
export BUILD_DIR=$1

BIN_DIR=$(cd $(dirname $0); pwd) # absolute path
. $BIN_DIR/java
. $BIN_DIR/util

# Install JDK
javaVersion=$(detect_java_version ${BUILD_DIR})
status_pending "Installing super cool pivotal approved JDK ${javaVersion}"
install_java ${BUILD_DIR} ${javaVersion}
jdk_overlay ${BUILD_DIR}
status_done
